{
  "name": "@0xc/maverick",
  "version": "0.1.24",
  "description": "Orchestrated containerized development for monorepositories",
  "private": false,
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "start-ts": "ts-node src/index.ts",
    "start:dev": "TS_NODE_TRANSPILE_ONLY=true TS_NODE_FILES=true nodemon --nolazy -r ts-node/register --inspect=0.0.0.0:23001 -e ts,js,json,md --watch src src/index.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint src/**/*.ts",
    "build": "tsc",
    "prebuild:prod": "[ -d ./dist ] && rm -rf ./dist || :",
    "build:prod": "tsc -p tsconfig.prod.json",
    "prepare": "npm run build:prod"
  },
  "files": [
    "dist"
  ],
  "bin": {
    "maverick": "./dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tcarrio/maverick.git"
  },
  "keywords": [
    "Docker",
    "development",
    "orchestration"
  ],
  "author": "Tom Carrio <tom@carrio.dev>",
  "devDependencies": {
    "@types/bunyan": "^1.8.6",
    "@types/bunyan-format": "^0.2.0",
    "@types/glob": "^7.1.1",
    "@types/jest": "^24.9.1",
    "@types/js-yaml": "^3.12.1",
    "jest": "^24.9.0",
    "jest-junit": "^6.4.0",
    "nodemon": "^1.19.4",
    "prettier": "^1.19.1",
    "ts-jest": "^24.3.0",
    "ts-node": "^8.6.2",
    "typescript": "3.4.5"
  },
  "dependencies": {
    "bunyan": "^1.8.12",
    "bunyan-format": "^0.2.1",
    "commander": "^3.0.2",
    "glob": "^7.1.6",
    "joi": "^14.3.1",
    "js-yaml": "^3.13.1",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.16",
    "typedi": "^0.8.0"
  }
}

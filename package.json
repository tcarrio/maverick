{
  "name": "@davis/maverick",
  "version": "1.0.1",
  "description": "Orchestrated containerized development for monorepositories",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "start-ts": "ts-node src/index.ts",
    "start:dev": "TS_NODE_TRANSPILE_ONLY=true TS_NODE_FILES=true nodemon --nolazy -r ts-node/register --inspect=0.0.0.0:23001 -e ts,js,json,md --watch src --watch node_modules/@davis src/app.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint src/**/*.ts",
    "build": "tsc"
  },
  "bin": {
    "maverick": "./dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://bitbucket.lab.dynatrace.org/scm/dav/singularity.git"
  },
  "keywords": [
    "Docker",
    "development",
    "orchestration"
  ],
  "author": "Tom Carrio <thomas.carrio@dynatrace.com>",
  "devDependencies": {
    "@types/bunyan": "^1.8.6",
    "@types/bunyan-format": "^0.2.0",
    "@types/glob": "^7.1.1",
    "@types/jest": "^24.0.9",
    "@types/js-yaml": "^3.12.1",
    "@types/lodash.foreach": "^4.5.6",
    "@types/lodash.template": "^4.4.6",
    "@types/lodash.clonedeep": "^4.4.6",
    "@types/morgan": "^1.7.35",
    "jest": "^24.9.0",
    "jest-junit": "^6.4.0",
    "nodemon": "^1.18.10",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.0.2",
    "typescript": "3.4.5"
  },
  "dependencies": {
    "bunyan": "^1.8.12",
    "bunyan-format": "^0.2.1",
    "commander": "^3.0.0",
    "glob": "^7.1.3",
    "joi": "^14.3.1",
    "js-yaml": "^3.13.1",
    "lodash.foreach": "^4.5.0",
    "lodash.template": "^4.5.0",
    "lodash.clonedeep": "^4.5.0",
    "morgan": "^1.9.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.2",
    "source-map-support": "^0.5.10",
    "typedi": "^0.8.0"
  }
}
